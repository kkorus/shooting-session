{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "*": ["./*"]
    }
  },
  "include": ["app/src/**/*"],
  "exclude": ["node_modules"]
}
